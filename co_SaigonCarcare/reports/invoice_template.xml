<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="invoice_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="co_SaigonCarcare.co_SaigonCarcare_external_layout">
                        <div class="page" style="margin-top: 0;" >
                            <style>
                                body, p, div, span, h1, h2, h3, h4, h5, h6, table {
                                    font-family: "Times New Roman", Times, serif;
                                    letter-spacing: 0.5px;
                                }
                                .table-2px-border {
                                    border: 2px solid black !important;
                                    border-collapse: collapse;
                                }
                                .table-2px-border th,
                                .table-2px-border td {
                                    border: 2px solid black !important;
                                }
                            </style>
                            <div class="oe_structure" />
                            <div class="text-center" style="margin-top: 0;">
                                <h1 style="font-weight: bold;">PHIẾU THU</h1>
                            </div>
                            <div class="text-end" style="margin: 0; padding: 0;">
                                <table style="margin-left: auto; border: none;">
                                    <tr class="text_left" style="border: none;">
                                        <td class="text_left"  style="border: none; padding: 2px 5px;"><strong>Đơn hàng:</strong></td>
                                        <td class="text_left" style="border: none; padding: 2px 5px;">
                                            <span class="text_left" t-field="o.invoice_origin" style="font-style: italic;"/>
                                        </td>
                                    </tr>
                                    <tr class="text_left" style="border: none;">
                                        <td class="text_left"  style="border: none; padding: 2px 5px;"><strong>Phiếu thu số:</strong></td>
                                        <td class="text_left" style="border: none; padding: 2px 5px;">
                                            <span class="text_left" t-field="o.payment_reference" style="font-style: italic;"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="row mt32 mb32" style="margin-top : 0px;">
                                <div class="col-6">
                                    <div>
                                        <strong>Khách hàng: </strong>
                                        <span t-field="o.partner_id.name"/>
                                    </div>
                                    <div>
                                        <strong>Điện thoại: </strong>
                                        <span t-esc="o.partner_id.phone or ''"/>
                                    </div>
                                    <div>
                                        <strong>Địa chỉ: </strong>
                                        <span t-esc="o.partner_id.street or ''"/>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div>
                                        <strong>Biển số xe: </strong>
                                        <span t-field="o.license_plate"/>
                                    </div>
                                    <div>
                                        <strong>Hiệu xe: </strong>
                                        <span t-esc="o.car_brand"/>
                                    </div>
                                    <div>
                                        <strong>Ngày nhận xe: </strong>
                                        <span t-esc="o.receiving_date" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/>
                                    </div>
                                    <div>
                                        <strong>Ngày giao xe: </strong>
                                        <span t-esc="o.delivery_date" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/>
                                    </div>
                                </div>
                            </div>
                            <t t-if="o.invoice_line_ids">
                                <table class="table table-sm table-2px-border">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Hạng mục</th>
                                            <th class="text-right">Đơn vị tính</th>
                                            <th class="text-right">Số lượng</th>
                                            <th class="text-right">Đơn giá</th>
                                            <th class="text-right">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="line_index" t-value="0"/>
                                        <tr t-foreach="o.invoice_line_ids.filtered(lambda l: l.product_id)" t-as="line">
                                            <t t-set="line_index" t-value="line_index + 1"/>
                                            <td class="text-center"><span t-esc="line_index"/></td>
                                            <td>
                                                <span t-field="line.product_id.name"/>
                                            </td>
                                            <td class="text-center">
                                                    <span t-field="line.co_unit"/>
                                                </td>
                                            <td class="text-right">
                                                <span t-field="line.quantity"/>
                                                <span t-field="line.product_uom_id.name" groups="uom.group_uom"/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="line.price_unit"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="line.price_subtotal"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                            <div class="row">
                                <strong>Ghi chú:  </strong>
                                <span t-esc="o.narration"/>
                                <br/>
                            </div>
                            <div class="row">
                                <div class="col-6"/>
                                <div class="col-6">
                                    <table class="table table-sm table-2px-border">
                                        <tr>
                                            <td><strong>TỔNG CỘNG:</strong></td>
                                            <td class="text-end">
                                                <span t-field="o.amount_total_without_discount"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>ƯU ĐÃI: </strong></td>
                                            <td class="text-end">
                                                <span t-if="o.discount_total" 
                                                    t-field="o.discount_total"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                <span t-if="not o.discount_total"></span>
                                
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>VAT:</strong></td>
                                            <td class="text-end">
                                                <span t-if="o.amount_tax" 
                                                    t-field="o.amount_tax"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                <span t-if="not o.amount_tax"></span>
                                            </td>
                                        </tr>
                                        <tr class="border-black">
                                            <td><strong>THÀNH TIỀN:</strong></td>
                                            <td class="text-end">
                                                <strong>
                                                    <span t-field="o.amount_total"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="text-end">
                                <t t-set="invoice_date" t-value="o.invoice_date.strftime('%d/%m/%Y')"/>
                                <t t-set="ngay" t-value="o.invoice_date.strftime('%d')"/>
                                <t t-set="thang" t-value="o.invoice_date.strftime('%m')"/>
                                <t t-set="nam" t-value="o.invoice_date.strftime('%Y')"/>

                                <br/>
                                <p style="font-style: italic;">
                                    Ngày <t t-esc="ngay"/> tháng <t t-esc="thang"/> năm <t t-esc="nam"/>
                                </p>
                            </div>
                            <div class="mt32">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <p><strong>Khách hàng đồng ý</strong></p>
                                        <p>(Ký và ghi rõ họ tên)</p>
                                        <br/><br/><br/>
                                    </div>
                                    <div class="col-4">
                                        <p><strong>Cố vấn dịch vụ</strong></p>
                                        <p>(Ký và ghi rõ họ tên)</p>
                                        <br/><br/><br/>
                                    </div>
                                    <div class="col-4 text-right">
                                        <p><strong>Kế toán</strong></p>
                                        <p>(Ký và ghi rõ họ tên)</p>
                                        <br/><br/><br/>
                                    </div>
                                </div>
                            </div>
                            

                            <div class="oe_structure"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>