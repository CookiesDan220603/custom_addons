<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_quote_print" model="report.paperformat">
            <field name="name">Quotes print format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">60</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">10</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
        <!-- Report definition -->
        <record id="quotes_report_action" model="ir.actions.report">
            <field name="name">Quote Print Report</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">co_SaigonCarcare.quote_report_template</field>
            <field name="report_file">co_SaigonCarcare.quote_report_template</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_quote_print"/>
            <field name="print_report_name">'BaoGia_%s' % (object.name or 'draft').replace('/', '_')</field>

        </record>

    </data>
</odoo>
