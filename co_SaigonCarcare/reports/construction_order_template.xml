<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="construction_order_report_template">
            <t t-call="web.html_container">
                <t t-call="co_SaigonCarcare.co_SaigonCarcare_external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page" style="margin-top: 0;">
                            <style>
                                body, p, div, span, h1, h2, h3, h4, h5, h6, table {
                                    font-family: "Times New Roman", Times, serif;
                                    letter-spacing: 0.5px;
                                }.table-2px-border {
                                    border: 2px solid black !important;
                                    border-collapse: collapse;
                                }
                                .table-2px-border th,
                                .table-2px-border td {
                                    border: 2px solid black !important;
                                }
                            </style>

                            <div class="oe_structure"></div>

                            <div class="text-center" style="margin-top: 0;">
                                <h1 style="font-weight: bold;">LỆNH THI CÔNG</h1>
                            </div>
                            <div class="text-end" style="margin: 0; padding: 0;">
                                <strong>Đơn hàng: </strong>
                                <span t-field="o.name" style="font-style: italic;"/>
                            </div>

                            <div class="row mt32 mb32">
                                <div class="col-6">
                                    
                                    <div>
                                        <strong>Khách hàng: </strong>
                                        <span t-field="o.partner_id.name"/>
                                    </div>
                                    <div>
                                        <strong>Địa chỉ: </strong>
                                        <span t-esc="o.partner_id.street or ''"/>
                                    </div>
                                    
                                    <div>
                                        <strong>Người liên hệ: </strong>
                                        <span t-esc="o.consultant_id.name"/>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div>
                                        <strong>Biển số xe: </strong>
                                        <span t-field="o.license_plate"/>
                                    </div>
                                    <div>
                                        <strong>Hiệu xe: </strong>
                                        <span t-esc="o.car_brand"/>
                                    </div>
                                    <div>
                                        <strong>Ngày nhận xe: </strong>
                                        <span t-esc="o.receiving_date" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/>
                                    </div>
                                    <div>
                                        <strong>Ngày giao xe: </strong>
                                        <span t-esc="o.delivery_date" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/>
                                    </div>
                                </div>
                            </div>

                            <t t-if="o.order_line">
                                <table class="table table-sm table-2px-border">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Hạng mục</th>
                                            <th>Đơn vị tính</th>
                                            <th class="text-right">Số lượng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="line_index" t-value="0"/>
                                        <t t-foreach="o.order_line" t-as="line">
                                            <t t-set="line_index" t-value="line_index + 1"/>
                                            <tr>
                                                <td class="text-center"><span t-esc="line_index"/></td>
                                                <td>
                                                    <span t-field="line.product_template_id.name"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="line.co_unit"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.product_uom_qty"/>
                                                    <span t-field="line.product_uom_id.name" groups="uom.group_uom"/>
                                                </td>
                                            
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>

                            <div class="row">
                                <strong>Ghi chú:</strong>
                                <span t-esc="o.note"/>
                                <br/>
                            </div>

                            <div class="text-end">
                                <t t-set="order_date" t-value="o.date_order.strftime('%d/%m/%Y')"/>
                                <t t-set="ngay" t-value="o.date_order.strftime('%d')"/>
                                <t t-set="thang" t-value="o.date_order.strftime('%m')"/>
                                <t t-set="nam" t-value="o.date_order.strftime('%Y')"/>

                                <br/>
                                <p style="font-style: italic;">
                                    Ngày <t t-esc="ngay"/> tháng <t t-esc="thang"/> năm <t t-esc="nam"/>
                                </p>
                            </div>
                            <div class="mt32">
                                <div class="row text-center">
    
                                    <div class="col-6">
                                        <p><strong>Cố vấn dịch vụ</strong></p>
                                        <p>(Ký và ghi rõ họ tên)</p>
                                        <br/><br/><br/>
                                    </div>
                                    <div class="col-6 text-right">
                                        <p><strong>Kỹ thuật viên</strong></p>
                                        <p>(Ký và ghi rõ họ tên)</p>
                                        <br/><br/><br/>
                                    </div>
                                </div>
                            </div>


                            <div class="oe_structure"></div>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>