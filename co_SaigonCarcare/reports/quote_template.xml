<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="quote_report_template">
            <t t-call="web.html_container">
                <t t-call="co_SaigonCarcare.co_SaigonCarcare_external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page" style="margin-top: 0;">
                            <style>
                                body, p, div, span, h1, h2, h3, h4, h5, h6, table {
                                    font-family: "Times New Roman", Times, serif;
                                    letter-spacing: 0.5px;
                                }
                            </style>

                            <div class="oe_structure"></div>

                            <div class="text-center" style="margin-top: 0;">
                                <h1 style="font-weight: bold;">BẢNG BÁO GIÁ</h1>
                            </div>

                            <div class="row mt32 mb32">
                                <div class="col-6">
                                    <div>
                                        <strong>Khách hàng: </strong>
                                        <span t-field="o.partner_id.name"/>
                                    </div>
                                    <div>
                                        <strong>Địa chỉ: </strong>
                                        <span t-esc="o.partner_id.street or ''"/>
                                    </div>
                                    <div>
                                        <strong>Điện thoại: </strong>
                                        <span t-esc="o.partner_id.phone or ''"/>
                                    </div>
                                    <div>
                                        <strong>Người liên hệ: </strong>
                                        <span t-esc="o.consultant_id.name"/>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div>
                                        <strong>Biển số xe: </strong>
                                        <span t-field="o.license_plate"/>
                                    </div>
                                    <div>
                                        <strong>Hiệu xe: </strong>
                                        <span t-esc="o.car_brand"/>
                                    </div>
                                    <div>
                                        <strong>Ngày nhận xe: </strong>
                                        <span t-esc="o.receiving_date"/>
                                    </div>
                                    <div>
                                        <strong>Ngày giao xe: </strong>
                                        <span t-esc="o.delivery_date"/>
                                    </div>
                                </div>
                            </div>

                            <t t-if="o.order_line">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Hạng mục</th>
                                            <th class="text-right">Số lượng</th>
                                            <th class="text-right">Đơn giá</th>
                                            <th class="text-right">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="line_index" t-value="0"/>
                                        <t t-foreach="o.order_line" t-as="line">
                                            <t t-set="line_index" t-value="line_index + 1"/>
                                            <tr>
                                                <td><span t-esc="line_index"/></td>
                                                <td>
                                                    <span t-field="line.product_template_id.name"/>
                                                    <div t-if="line.name != line.product_template_id.name" class="text-muted">
                                                        <small t-field="line.name"/>
                                                    </div>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.product_uom_qty"/>
                                                    <span t-field="line.product_uom_id.name" groups="uom.group_uom"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.price_unit"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.price_subtotal_untaxed"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>

                            <div class="row">
                                <strong>Ghi chú:</strong>
                                <span t-esc="o.note"/>
                                <br/>
                            </div>

                            <div class="row">
                                <div class="col-6"></div>
                                <div class="col-6">
                                    <table class="table table-sm">
                                        <tr>
                                            <td><strong>TỔNG CỘNG:</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount_total_without_discount"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>ƯU ĐÃI: </strong></td>
                                            <td class="text-right">
                                                <span t-field="o.discount_total"/>
                                                <span> %</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>VAT:</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount_tax"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr class="border-black">
                                            <td><strong>THÀNH TIỀN:</strong></td>
                                            <td class="text-right">
                                                <strong>
                                                    <span t-field="o.amount_total"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="text-end">
                                <t t-set="order_date" t-value="o.date_order.strftime('%d/%m/%Y')"/>
                                <t t-set="ngay" t-value="o.date_order.strftime('%d')"/>
                                <t t-set="thang" t-value="o.date_order.strftime('%m')"/>
                                <t t-set="nam" t-value="o.date_order.strftime('%Y')"/>

                                <br/>
                                <p style="font-style: italic;">
                                    Ngày <t t-esc="ngay"/> tháng <t t-esc="thang"/> năm <t t-esc="nam"/>
                                </p>
                            </div>

                            <div class="mt32">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <p><strong>Khách hàng đồng ý</strong></p>
                                        <p>(Ký và ghi rõ họ tên)</p>
                                        <br/><br/><br/>
                                    </div>
                                    <div class="col-4">
                                        <p><strong>Cố vấn dịch vụ</strong></p>
                                        <p>(Ký và ghi rõ họ tên)</p>
                                        <br/><br/><br/>
                                    </div>
                                    <div class="col-4">
                                        <p><strong>Kế toán</strong></p>
                                        <p>(Ký và ghi rõ họ tên)</p>
                                        <br/><br/><br/>
                                    </div>
                                </div>
                            </div>

                            <div class="oe_structure"></div>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>