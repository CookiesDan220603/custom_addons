<odoo>

    <data>
        <record id="product_template_invisible_page" model="ir.ui.view">
            <field name="name">product.template.product.form.hide.other</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <!-- Ẩn page Other Info -->
                <xpath expr="//page[@name='sales']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <!-- Ẩn page Tồn Kho -->
                <xpath expr="//page[@name='inventory']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <!-- Ẩn page Kế toán -->
                <xpath expr="//page[@name='invoicing']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Ẩn file trong thông tin chung -->
                <field name="default_code" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//button[@type='action'][@name='166']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
